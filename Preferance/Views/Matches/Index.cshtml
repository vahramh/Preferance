@model IEnumerable<Preferance.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">New Match</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player1.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player2.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player3.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player4.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player2.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player3.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player4.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchDate)
            </td>
            <td>
                <a asp-action="Play" asp-route-id="@item.Id">Enter</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
